<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parra.lfelipe.calculator.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:inputType="number"
        android:id="@+id/eResultado"/>
        <Button
            android:id="@+id/bClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="CLEAR"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bSiete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="7"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bOcho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="8"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bNueve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="9"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bSuma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="+"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bCuatro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bCinco"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="5"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bSeis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="6"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bResta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="-"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bUno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="1"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bDos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="2"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bTres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="3"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bProducto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="*"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bPunto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="."
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bCero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="0"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bIgual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="="
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
        <Button
            android:id="@+id/bDivision"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="/"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:onClick="escribirCaracter"/>
    </LinearLayout>

</LinearLayout>
